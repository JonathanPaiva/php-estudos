{
    "name": "jonathanpaiva/buscador-cursos",
    "description": "Aula Buscador de Cursos da Alura",
    "type": "library",
    "authors": [
        {
            "name": "Jonathan Paiva",
            "email": "jonathan.paiva.m@hotmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.4",
        "symfony/dom-crawler": "^4.2",
        "symfony/css-selector": "^5.3"
    },
    "autoload":{
        "classmap": [
            "./Teste.php"
        ],
        "files": [
            "./functions.php"
        ],
        "psr-4":{
            "Alura\\BuscadorDeCursos\\": "src/",
            "Jonathanpaiva\\BuscadorCursos\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "8",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^5.3"
    },

    "scripts": {
        "test": "phpunit tests\\testesBuscadorDeCursos.php",
        "cs" : "phpcs --standard=PSR12 src/",
        "phan" : "phan --alow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@test"
        ],
     
        "post-update-cmd": [
            "@test"
        ]
    
    }, 

    "scripts-descriptions": {
        "check": "Executa analise nos c√≥digos via: PHPUnit, PHPCS, PHAN"
    }
}
